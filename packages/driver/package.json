{
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "src/**/*.test.ts"
    ]
  },
  "dependencies": {
    "@slonik/types": "^47.3.2",
    "@slonik/utilities": "^47.3.2",
    "roarr": "^7.21.1",
    "serialize-error": "^12.0.0",
    "strict-event-emitter-types": "^2.0.0"
  },
  "description": "A Node.js PostgreSQL client with strict types, detailed logging and assertions.",
  "devDependencies": {
    "@slonik/eslint-config": "workspace:^",
    "@types/node": "^22.15.19",
    "ava": "^6.3.0",
    "cspell": "^9.0.1",
    "eslint": "9.27.0",
    "nyc": "^17.1.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "engines": {
    "node": ">=24"
  },
  "files": [
    "./src",
    "./dist"
  ],
  "keywords": [
    "postgresql",
    "promise",
    "types"
  ],
  "license": "BSD-3-Clause",
  "main": "./dist/index.js",
  "name": "@slonik/driver",
  "nyc": {
    "all": true,
    "exclude": [
      "**/*.d.ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "silent": true,
    "sourceMap": false
  },
  "peerDependencies": {
    "zod": "^3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gajus/slonik"
  },
  "scripts": {
    "build": "rm -fr ./dist && tsc --project ./tsconfig.json",
    "lint": "npm run lint:cspell && npm run lint:eslint && npm run lint:tsc",
    "lint:cspell": "cspell . --no-progress --gitignore",
    "lint:eslint": "eslint --cache ./src",
    "lint:tsc": "tsc --noEmit",
    "test": "nyc ava --verbose --serial"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "version": "47.3.2"
}
