{
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@slonik/driver": "^47.3.2",
    "@slonik/errors": "^47.3.2",
    "@slonik/pg-driver": "^47.3.2",
    "@slonik/sql-tag": "^47.3.2",
    "@slonik/utilities": "^47.3.2",
    "get-stack-trace": "^3.1.1",
    "iso8601-duration": "^2.1.2",
    "p-limit": "^6.2.0",
    "postgres-interval": "^4.0.2",
    "roarr": "^7.21.1",
    "serialize-error": "^12.0.0",
    "strict-event-emitter-types": "^2.0.0"
  },
  "description": "A Node.js PostgreSQL client with strict types, detailed logging and assertions.",
  "devDependencies": {
    "@slonik/eslint-config": "workspace:^",
    "@types/node": "^22.15.19",
    "@types/sinon": "^17.0.4",
    "ava": "^6.3.0",
    "cspell": "^9.0.1",
    "eslint": "9.27.0",
    "expect-type": "^1.2.1",
    "get-port": "^7.1.0",
    "nyc": "^17.1.0",
    "sinon": "^20.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "zod": "^3.25.6"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "./src",
    "./dist"
  ],
  "keywords": [
    "postgresql",
    "promise",
    "types"
  ],
  "license": "BSD-3-Clause",
  "main": "./dist/index.js",
  "name": "slonik",
  "nyc": {
    "all": true,
    "exclude": [
      "src/bin",
      "src/queries/*.ts",
      "**/*.d.ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ],
    "silent": true,
    "sourceMap": false
  },
  "peerDependencies": {
    "zod": "^3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gajus/slonik"
  },
  "scripts": {
    "build": "rm -fr ./dist && tsc --project ./tsconfig.json",
    "lint": "npm run lint:cspell && npm run lint:eslint && npm run lint:tsc",
    "lint:cspell": "cspell . --no-progress --gitignore",
    "lint:eslint": "eslint --cache ./src",
    "lint:tsc": "tsc --noEmit",
    "test": "nyc ava --verbose --serial"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "version": "47.3.2"
}
