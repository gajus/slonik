{
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "src/**/*.test.ts"
    ],
    "nodeArguments": [
      "--import=tsimp"
    ]
  },
  "dependencies": {
    "@slonik/driver": "^48.10.1",
    "@slonik/errors": "^48.10.1",
    "@slonik/sql-tag": "^48.10.1",
    "@slonik/types": "^48.10.1",
    "@slonik/utilities": "^48.10.1",
    "pg": "^8.18.0",
    "pg-query-stream": "^4.12.0",
    "pg-types": "^4.1.0",
    "postgres-array": "^3.0.4"
  },
  "description": "A Node.js PostgreSQL client with strict types, detailed logging and assertions.",
  "devDependencies": {
    "@slonik/eslint-config": "workspace:^",
    "@types/node": "^24.10.13",
    "@types/pg": "^8.16.0",
    "ava": "^6.4.1",
    "cspell": "^9.6.4",
    "eslint": "9.39.2",
    "tsimp": "^2.0.12",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=24"
  },
  "files": [
    "./src",
    "./dist"
  ],
  "keywords": [
    "postgresql",
    "promise",
    "types"
  ],
  "license": "BSD-3-Clause",
  "main": "./dist/index.js",
  "name": "@slonik/pg-driver",
  "peerDependencies": {
    "zod": "^3.25 || ^4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gajus/slonik"
  },
  "scripts": {
    "build": "rm -fr ./dist && tsc --project ./tsconfig.json",
    "lint": "npm run lint:cspell && npm run lint:eslint && npm run lint:tsc",
    "lint:cspell": "cspell . --no-progress --gitignore",
    "lint:eslint": "eslint --cache ./src",
    "lint:tsc": "tsc --noEmit",
    "test": "ava --verbose --serial"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "version": "48.10.1"
}
